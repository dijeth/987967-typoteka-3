header.header(class=headerClasses)
  a.header__logo.logo(class=logoClasses href="/")
    img.logo__image(src="img/icons/logo-image-only.svg" alt="логотип Тайпотеки")
    span.logo__name Типотека

  if !user
    nav.header__nav 
      ul.header__nav-list 
        li.header__list-item 
          a.header__registration(href="/registration") Регистрация
        li.header__list-item 
          a.header__enter(href="/login") Вход с паролем
    a.header__search.button.button--search(href="#" aria-label="поиск по сайту")

  if user && user.role === "reader"
    nav.header__nav
      ul.header__nav-list
        li.header__list-item
          p #{user.firstname} #{user.lastname}
        li.header__list-item
          a.header__exit(href="#") Выйти
    a.header__avatar.avatar
      img(src=`img/avatars/${user.avatar}` alt="аватар пользователя")
    a.header__search.button.button--search(href="#" aria-label="поиск по сайту")

  if user && user.role === "admin"
    a.button.button--colored.header__button-new(href="/articles/add") Новая запись
    div.header__dropdown 
      a.button.button--burger.header__burger(href="#") Открыть меню
      ul.navigation.header__navigation 
        li.navigation__item
          a(href="index.html") index.html --- все ссылки
        li.navigation__item
          a(href="main.html") main.html --- Главная страница
        li.navigation__item
          a(href="main-variation.html") main-variation.html --- Главная страница (варианты вида)
    a.header__search.button.button--search(href="#" aria-label="поиск по сайту")
      




    
  


  


